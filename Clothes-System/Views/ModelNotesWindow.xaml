<Window x:Class="Clothes_System.Views.ModelNotesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="تعديل الملاحظات"
        Height="500"
        Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F7F9FC"
        FlowDirection="RightToLeft"
        SizeToContent="Height">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <TextBlock Grid.Row="0" 
                   Text="📝 تعديل الملاحظات"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#333"
                   Margin="0,0,0,15"
                   HorizontalAlignment="Center"/>

        <!-- MODEL INFO -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="{Binding CurrentModel.Name}" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock Text="{Binding CurrentModel.Code}" FontSize="14" Foreground="#666" Margin="0,0,0,10"/>
        </StackPanel>

        <Separator Grid.Row="1" Margin="0,40,0,10" VerticalAlignment="Bottom"/>

        <!-- NOTES TEXTBOX -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="الملاحظات:" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"
                     Height="200"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     Padding="10"
                     FontSize="14"
                     BorderBrush="#DDD"
                     BorderThickness="1"
                     VerticalAlignment="Top"/>
        </StackPanel>

        <!-- ACTION BUTTONS - Fixed at bottom -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,20,0,0">
            <Button Content="حفظ"
                    Width="100"
                    Height="35"
                    Background="#28A745"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Padding="8,4"
                    Command="{Binding SaveNotesCommand}"
                    Margin="10,0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Content="إلغاء"
                    Width="100"
                    Height="35"
                    Background="#6C757D"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Padding="8,4"
                    Command="{Binding CloseCommand}"
                    Margin="10,0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>

    </Grid>
</Window>