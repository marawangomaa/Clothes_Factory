<Window x:Class="Clothes_System.Views.PaymentInvoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="سداد العميل" Height="250" Width="360"
        WindowStartupLocation="CenterScreen"
        FlowDirection="RightToLeft"
        Background="#F0F4F8">

    <Grid Margin="16">
        <StackPanel>

            <!-- PAYMENT METHOD -->
            <TextBlock Text="طريقة الدفع" FontWeight="Bold" Margin="0,0,0,6"/>
            <ComboBox Width="220"
                      Height="30"
                      ItemsSource="{Binding PaymentTypes}"
                      SelectedItem="{Binding SelectedPaymentMethod}"
                      Margin="0,0,0,12"/>

            <!-- AMOUNT -->
            <TextBlock Text="المبلغ" FontWeight="Bold" Margin="0,0,0,6"/>
            <TextBox Width="220" Height="30" Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12"/>

            <!-- BUTTONS -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
                <Button Content="إلغاء" Width="100" Height="35" Margin="6"
                        Background="#DC3545" Foreground="White" FontWeight="Bold"
                        Click="Cancel_Click"/>

                <Button Content="حفظ" Width="100" Height="35" Margin="6"
                        Background="#28A745" Foreground="White" FontWeight="Bold"
                        Command="{Binding SaveCommand}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
