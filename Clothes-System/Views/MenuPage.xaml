<Page x:Class="Clothes_System.Views.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="القائمة"
      FlowDirection="RightToLeft">

    <!-- Page-level Resources -->
    <Page.Resources>
        <Style x:Key="BlueButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#003F6B"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <!-- Page Background with gradient and shapes -->
    <Grid>
        <!-- Gradient background -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1E3C72" Offset="0.0"/>
                <GradientStop Color="#2A5298" Offset="0.3"/>
                <GradientStop Color="#4A90E2" Offset="0.6"/>
                <GradientStop Color="#6EC1E4" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Decorative circles -->
        <Canvas>
            <Ellipse Width="150" Height="150" Fill="#33FFFFFF" Canvas.Left="50" Canvas.Top="50"/>
            <Ellipse Width="100" Height="100" Fill="#33FFFFFF" Canvas.Left="200" Canvas.Top="100"/>
            <Ellipse Width="200" Height="200" Fill="#22FFFFFF" Canvas.Left="100" Canvas.Top="300"/>
            <Ellipse Width="120" Height="120" Fill="#33FFFFFF" Canvas.Left="250" Canvas.Top="400"/>
        </Canvas>

        <!-- Main Layout -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="مصنع الملابس"
                       Foreground="White" FontSize="32" FontWeight="Bold"
                       Margin="0,0,0,30"
                       HorizontalAlignment="Center"/>
            <Button Content="العملاء" Click="Clients_Click" Style="{StaticResource BlueButtonStyle}"/>
            <Button Content="المواد" Click="Materials_Click" Style="{StaticResource BlueButtonStyle}"/>
            <Button Content="العمال" Click="Workers_Click" Style="{StaticResource BlueButtonStyle}"/>
            <Button Content="النماذج" Click="Models_Click" Style="{StaticResource BlueButtonStyle}"/>
            <Button Content="المقص" Click="Scissors_Click" Style="{StaticResource BlueButtonStyle}"/>
            <Button Content="المخزن" Click="Storage_Click" Style="{StaticResource BlueButtonStyle}"/>
            <Button Content="البنك" Click="Bank_Click" Style="{StaticResource BlueButtonStyle}"/>
        </StackPanel>
    </Grid>

</Page>
