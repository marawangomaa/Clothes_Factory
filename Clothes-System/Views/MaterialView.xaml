<Page x:Class="Clothes_System.Views.MaterialView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="المواد"
      Background="#F9FAFC"
      FlowDirection="RightToLeft"
      FontSize="20">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER: Title centered + Home Button top-right -->
        <Grid Margin="0,0,0,15">
            <TextBlock Text="📦 إدارة المواد"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <Button Content="🏠 العودة للصفحة الرئيسية"
                    Click="Back_Click"
                    Background="#007ACC"
                    Foreground="White"
                    FontWeight="Bold"
                    Padding="12,6"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    FontSize="20"/>
        </Grid>

        <!-- Add Material Section -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,15" VerticalAlignment="Top">

            <StackPanel Margin="0,0,10,0">
                <TextBlock Text="اسم المادة" Foreground="Gray" FontSize="22"/>
                <TextBox Width="150" Height="40" FontSize="20"
                         Text="{Binding NewMaterial.Name, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <StackPanel Margin="0,0,10,0">
                <TextBlock Text="الكمية" Foreground="Gray" FontSize="22"/>
                <TextBox Width="100" Height="40" FontSize="20"
                         Text="{Binding NewMaterial.Quantity, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <StackPanel Margin="0,0,10,0">
                <TextBlock Text="الإجمالي" Foreground="Gray" FontSize="22"/>
                <TextBox Width="120" Height="40" FontSize="20"
                         Text="{Binding NewMaterial.TotalCost, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" 
                         PreviewTextInput="Decimal_PreviewTextInput"/>

            </StackPanel>

            <Button Content="شراء المادة"
                    Command="{Binding AddMaterialCommand}"
                    Background="#28A745"
                    Foreground="White"
                    Padding="12,6"
                    FontWeight="Bold"
                    FontSize="20"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="15,20,0,0"
                    Width="150"
                    Height="45"/>
        </StackPanel>

        <!-- Materials Purchase History -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Materials}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  AlternatingRowBackground="#E6F0FA"
                  RowBackground="White"
                  HeadersVisibility="Column"
                  BorderBrush="#DDD"
                  BorderThickness="1"
                  FontSize="20">

            <DataGrid.Columns>
                <DataGridTextColumn Header="التاريخ" Binding="{Binding Date}" Width="180" />
                <DataGridTextColumn Header="اسم المادة" Binding="{Binding Name}" Width="*" />
                <DataGridTextColumn Header="الكمية" Binding="{Binding Quantity}" Width="120" />
                <DataGridTextColumn Header="الإجمالي" Binding="{Binding TotalCost}" Width="150" />
            </DataGrid.Columns>

        </DataGrid>

    </Grid>
</Page>
