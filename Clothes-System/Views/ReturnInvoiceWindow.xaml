<Window x:Class="Clothes_System.Views.MultiReturnInvoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="فاتورة مرتجع" Height="520" Width="800"
        WindowStartupLocation="CenterScreen"
        FlowDirection="RightToLeft"
        Background="#F0F4F8">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="أصناف المرتجع" FontSize="22" FontWeight="Bold" Margin="0,0,0,12"/>

        <!-- ITEMS LIST -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding ReturnItems}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Margin="0,0,0,12"
                  AlternatingRowBackground="#E6F0FA"
                  RowBackground="White"
                  HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="الصنف" Binding="{Binding ItemName}" Width="2*"/>
                <DataGridTextColumn Header="الكمية الأصلية" Binding="{Binding OriginalQty}" Width="*"/>
                <DataGridTextColumn Header="السعر" Binding="{Binding Price}" Width="*"/>
                <DataGridTextColumn Header="كمية المرتجع" Binding="{Binding ReturnQty, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                <DataGridTextColumn Header="الإجمالي" Binding="{Binding Total}" Width="*" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- FOOTER -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,10,0,0">
            <TextBlock Text="إجمالي المرتجع:" VerticalAlignment="Center" FontSize="16" Margin="0,0,10,0"/>
            <TextBlock Text="{Binding TotalRefund}" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,20,0"/>

            <Button Content="حفظ" Width="120" Height="35" 
                    Background="#28A745" Foreground="White" FontWeight="Bold"
                    Margin="0,0,10,0"
                    Command="{Binding SaveCommand}" />

            <Button Content="إلغاء" Width="120" Height="35"
                    Background="#DC3545" Foreground="White" FontWeight="Bold"
                    Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
