<Window x:Class="Clothes_System.Views.MultiReturnInvoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="فاتورة مرتجع"
        Height="520"
        Width="800"
        WindowStartupLocation="CenterScreen"
        FlowDirection="RightToLeft"
        Background="#F0F4F8">

    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="أصناف المرتجع"
                   FontSize="28"
                   FontWeight="Bold"
                   Margin="0,0,0,14"/>

        <!-- ERROR MESSAGE -->
        <TextBlock Grid.Row="1"
                   Text="{Binding ErrorMessage}"
                   Foreground="Red"
                   FontWeight="Bold"
                   FontSize="18"
                   Margin="0,0,0,12"
                   TextWrapping="Wrap"/>

        <!-- ITEMS LIST -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding ReturnItems}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Margin="0,0,0,14"
                  AlternatingRowBackground="#E6F0FA"
                  RowBackground="White"
                  HeadersVisibility="Column"
                  FontSize="17">

            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="FontSize" Value="19"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="الصنف"
                                    Binding="{Binding ItemName}"
                                    Width="2*"/>

                <DataGridTextColumn Header="الكمية الأصلية"
                                    Binding="{Binding OriginalQty}"
                                    Width="*"/>

                <DataGridTextColumn Header="السعر"
                                    Binding="{Binding Price, StringFormat='{}{0:C}'}"
                                    Width="*"/>

                <DataGridTextColumn Header="كمية المرتجع"
                                    Binding="{Binding ReturnQty, UpdateSourceTrigger=PropertyChanged}"
                                    Width="*"/>

                <DataGridTextColumn Header="الإجمالي"
                                    Binding="{Binding Total, StringFormat='{}{0:C}'}"
                                    Width="*"
                                    IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- FOOTER -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0,12,0,0">

            <TextBlock Text="إجمالي المرتجع:"
                       VerticalAlignment="Center"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,12,0"/>

            <TextBlock Text="{Binding TotalRefund, StringFormat='{}{0:C}'}"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="Red"
                       VerticalAlignment="Center"
                       Margin="0,0,25,0"/>

            <Button Content="حفظ"
                    Width="140"
                    Height="40"
                    Background="#28A745"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="18"
                    Margin="0,0,12,0"
                    Command="{Binding SaveCommand}" />

            <Button Content="إلغاء"
                    Width="140"
                    Height="40"
                    Background="#DC3545"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="18"
                    Click="Cancel_Click"/>
        </StackPanel>
    </Grid>

</Window>
