<Window x:Class="Clothes_System.Views.ModelDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="تفاصيل النموذج"
        Height="400"
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Background="#F7F9FC"
        FlowDirection="RightToLeft">

    <Grid Margin="20">
        <Border Background="White"
                Padding="20"
                CornerRadius="12"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                Effect="{DynamicResource DropShadowEffect}">
            <StackPanel>

                <!-- HEADER -->
                <TextBlock Text="📐 تفاصيل النموذج"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#333"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"/>

                <!-- MODEL INFO -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <Image Source="{Binding CurrentModel.Image}"
                           Width="120"
                           Height="120"
                           Stretch="UniformToFill"
                           Margin="0,0,15,0"
                           VerticalAlignment="Top"
                           ClipToBounds="True"
                           SnapsToDevicePixels="True"
                           StretchDirection="Both" />

                    <StackPanel VerticalAlignment="Top">
                        <TextBlock Text="{Binding CurrentModel.Name}" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding CurrentModel.Code}" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                        <TextBlock Text="التكلفة:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding CurrentModel.Cost}" Margin="0,0,0,5"/>
                        <TextBlock Text="سعر البيع:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding CurrentModel.SellPrice}" Margin="0,0,0,5"/>
                        <TextBlock Text="الكمية:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding CurrentModel.Quantity}" />
                    </StackPanel>
                </StackPanel>

                <Separator Margin="0,10,0,10"/>

                <!-- ADD PIECES -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBox Width="150"
                             Text="{Binding AddedPieces, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,10,0"
                             ToolTip="أدخل عدد القطع المراد إضافتها"
                             HorizontalContentAlignment="Center"
                             Padding="4"/>

                    <Button Width="120"
                            Content="إضافة قطع"
                            Command="{Binding AddPiecesCommand}"
                            Background="#28A745"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Padding="6,3"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window>
