<Window x:Class="Clothes_System.Views.ModelDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="تفاصيل النموذج"
        Height="450"
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F7F9FC"
        FlowDirection="RightToLeft">

    <Grid Margin="20">
        <Border Background="White"
                Padding="20"
                CornerRadius="12"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <StackPanel>

                <!-- HEADER -->
                <TextBlock Text="📐 تفاصيل النموذج"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#333"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"/>

                <!-- MODEL INFO -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <Image Source="{Binding CurrentModel.Image}"
                           Width="120"
                           Height="120"
                           Stretch="UniformToFill"
                           Margin="0,0,15,0"
                           VerticalAlignment="Top" />

                    <StackPanel VerticalAlignment="Top">
                        <TextBlock Text="{Binding CurrentModel.Name}" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding CurrentModel.Code}" FontSize="14" Foreground="#666" Margin="0,0,0,8"/>
                        <TextBlock Text="التكلفة:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding CurrentModel.Cost, StringFormat='{}{0:C}'}" Margin="0,0,0,5"/>
                        <TextBlock Text="سعر البيع:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding CurrentModel.SellPrice, StringFormat='{}{0:C}'}" Margin="0,0,0,5"/>
                        <TextBlock Text="الكمية:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding CurrentModel.Quantity}" FontSize="16" FontWeight="Bold" Foreground="Green"/>
                    </StackPanel>
                </StackPanel>

                <Separator Margin="0,10,0,10"/>

                <!-- ADD PIECES -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="إضافة قطع جديدة:" FontWeight="Bold" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBox Width="150"
                                 Text="{Binding AddedPieces, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,10,0"
                                 ToolTip="أدخل عدد القطع المراد إضافتها"
                                 HorizontalContentAlignment="Center"
                                 Padding="4"/>

                        <Button Width="120"
                                Content="إضافة قطع"
                                Command="{Binding AddPiecesCommand}"
                                Background="#28A745"
                                Foreground="White"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Padding="6,3"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </StackPanel>

                <!-- ACTION BUTTONS -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button Content="إغلاق"
                            Width="100"
                            Background="#6C757D"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Padding="8,4"
                            Command="{Binding CloseCommand}"
                            Margin="5,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window>